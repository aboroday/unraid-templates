<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
    <Name>portainer-ce</Name>
    <Repository>portainer/portainer-ce</Repository>
    <Registry>https://registry.hub.docker.com/u/portainer/portainer-ce</Registry>
    <Network Default="bridge">bridge</Network>
    <Category>Docker:</Category>

    <Project>https://www.portainer.io/</Project>
    <Overview>
        Portainer is a platform-agnostic tool for managing containerized applications.
    </Overview>
    <Privileged>false</Privileged>
    <Environment/>
    <Networking>
        <Mode>bridge</Mode>
        <Publish/>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/portainer-ce</HostDir>
            <ContainerDir>/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
        <Volume>
            <HostDir>/var/run/docker.sock</HostDir>
            <ContainerDir>/var/run/docker.sock</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <WebUI>http://[IP]:[PORT:9000]/</WebUI>
    <Icon>https://raw.githubusercontent.com/aboroday/unraid-templates/master/templates/img/portainer.logo.png</Icon>

    <Labels>
        <Label>
            <Value>false</Value>
            <Name>traefik.enable</Name>
            <Mode/>
        </Label>
        <Label>
            <Value>true</Value>
            <Name>traefik.http.services.plexui.loadbalancer.server.port</Name>
            <Mode/>
        </Label>
    </Labels>

    <Config Name="Enable proxying by traefik" Target="traefik.enable" Default="" Mode=""
            Description="Enable proxying by traefik" Type="Label" Display="advanced" Required="false" Mask="false">false
    </Config>

    <Config Name="Web Interface Port for traefik" Target="traefik.http.services.plexui.loadbalancer.server.port"
            Default="9000" Mode="" Description="This is Portainer's Web UI port you can access via a web browser"
            Type="Label" Display="always-visible" Required="false">9000
    </Config>

    <Config Type="Path" Name="Config Storage Path" Target="/data" Default="/mnt/user/appdata/portainer-ce" Mode="rw"
            Display="always-visible" Required="true"
            Description="This is where Portainer will store its configuration">
        /mnt/user/appdata/portainer-ce
    </Config>

    <Config Type="Path" Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="rw"
            Display="advanced-hide" Required="true"
            Description="Path to docker.sock socket">/var/run/docker.sock
    </Config>

</Container>